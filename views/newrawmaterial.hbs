<section class="vh-100" style="margin-bottom: -20%;">
  {{#if success}}
  <div class="alert alert-success" role="alert">
    {{message}}
  </div>
  {{/if}}


  {{#if error}}
  <div class="alert alert-danger" role="alert">
    {{message}}
  </div>
  {{/if}}
  
<div class="container">
    <div class="main-body">
          <div class="row gutters-sm mt-5">
            
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <form action="/transactions/addrawmaterial" method="post">
                        <legend>Registra una nuova materia prima:</legend>
                        <label for="name">Tipologia Materia Prima:</label><br>
                        <input readonly type="text" id="name" name="name" placeholder={{this.type}}><br>
                        <label for="amount">Quantità:</label><br>
                        <input type="number" id="amount" name="amount" min="0" max="100"><br>
                        <label for="carboonfootprint">Carboon Footprint:</label><br>
                        <input type="number" id="carbfoot" name="carbfoot" min="0" max="1000"><br>
                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Crea</button>
                        </div>
                    </form>
                    </div>
                  </div>
                </div>

                <div class="col-md-8">
                  <h3>Lista delle materie prime possedute</h3>
                  <div class="card mb-3">
                    <div class="card-body">
                      {{#each ownRawMaterials}}
                        <li>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">ID Lotto:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              {{this.idLotto}}
                            </div>
                            <div class="col-sm-3">
                              <h6 class="mb-0">Nome:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              {{this.name}}
                            </div>
                            <div class="col-sm-3">
                              <h6 class="mb-0">Quantità:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              {{this.amount}}
                            </div>
                            <div class="col-sm-3">
                              <h6 class="mb-0">Carbon Footprint:</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              {{this.carbonfootprint}}
                            </div>
                          </div>
                        </li>
                        <hr>
                      {{/each}}
                  </div>
                </div>
              </div>

          </div>
        </div>
    </div>     
  
</section>