<section class="vh-100" >
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm mt-5">
                
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                        <form action="/transactions/listrawmaterials" method="post">
                            <label for="selectWA">Choose a producer:</label>
                            <select id="selectWA" name="selectWA">   <!--> size="3"><-->
                                {{#each producers}}
                                    <option value={{this.walletAddress}}>{{this.name}}&nbsp;{{this.surname}}</option>
                                {{/each}}
                            </select> <br><br>
                            <button type="submit">Confirm</button>
                        </form>

                        <ul data-role="listview">
                            {{#each rawMaterials}}
                                <form action="/transactions/acquistoMateriaPrima" method="post">
                                    <li>
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div>
                                                        <select id="_lottoScelto" name="_lottoScelto" hidden="true">
                                                            <option value={{this.idLotto}}></option>
                                                        </select>
                                                        <select id="_walletProduttore" name="_walletProduttore" hidden="true">
                                                            <option value={{this.owner}}></option>
                                                        </select>
                                                        <h6 value={{this.idLotto}} class="mb-0">ID Lotto: {{this.idLotto}}</h6>
                                                        <h6 class="mb-0">Name: {{this.name}}</h6>
                                                        <h6 class="mb-0">Amount: {{this.amount}}</h6>
                                                        <h6 class="mb-0">Carbon Footprint: {{this.carbonfootprint}}</h6>
                                                        <div class="col-sm-9 text-secondary">
                                                            <button  type="submit" class="btn btn-info " target="__blank">Buy</a>
                                                        </div>
                                                    </div>
                                                
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </form>
                            {{/each}}
                            <hr class="dropdown-divider">           
                        </ul>
                        
                    </div>
                  </div>
                </div>

                <div class="col-md-8">
                    <h3>Lista delle materie prime possedute</h3>
                    <div class="card mb-3">
                        <div class="card-body">
                        {{#each ownRawMaterials}}
                            <li>
                            <div class="row">
                                <div class="col-sm-3">
                                <h6 class="mb-0">ID Lotto:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                {{this.idLotto}}
                                </div>
                                <div class="col-sm-3">
                                <h6 class="mb-0">Nome:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                {{this.name}}
                                </div>
                                <div class="col-sm-3">
                                <h6 class="mb-0">Amount:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                {{this.amount}}
                                </div>
                                <div class="col-sm-3">
                                <h6 class="mb-0">Carbon Footprint:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                {{this.carbonfootprint}}
                                </div>
                            </div>
                            </li>
                            <hr>
                        {{/each}}
                        </div>
                    </div>
              </div>

            </div>
        </div>
    </div>
</section> 



